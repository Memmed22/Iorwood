@model IorwoodDemo.Model.ViewModel.OrderDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<form method="post">
    <div class="border ml-1 backgroundWhite mt-4">
        <div class="row pb-1">
            <div class="col-12 col-md-6 ">
                <p class="h2  text-primary">Order Details</p>
            </div>
          
        </div>
        <hr />

        <div class="row pt-2">

            <div class="col-lg-8 col-12" style="border-right:1px solid #bbb9b9">
                <div class="form-group row">
                    <div class="col-md-3 col-12 text-primary">
                        <label asp-for="OrderHeader.FullName"></label>
                    </div>
                    <div class="col-md-9 col-12">
                        <input disabled asp-for="OrderHeader.FullName" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 col-12 text-primary">
                        <label asp-for="OrderHeader.PhoneNumber"></label>
                    </div>
                    <div class="col-md-9 col-12">
                        <input disabled asp-for="OrderHeader.PhoneNumber" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 col-12 text-primary">
                        <label asp-for="OrderHeader.Adress"></label>
                    </div>
                    <div class="col-md-9 col-12">
                        <input disabled asp-for="OrderHeader.Adress" class="form-control" />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-md-3 col-12 text-primary">
                        <label asp-for="OrderHeader.TotalAmount"></label>
                    </div>
                    <div class="col-md-9 col-12">
                        <input disabled asp-for="OrderHeader.TotalAmount" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 col-12 text-primary">
                        <label asp-for="OrderHeader.OrderDate"></label>
                    </div>
                    <div class="col-md-9 col-12">
                        <input disabled asp-for="OrderHeader.OrderDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 col-12 text-primary">
                        <label asp-for="OrderHeader.Comment"></label>
                    </div>
                    <div class="col-md-9 col-12">
                        <input disabled asp-for="OrderHeader.Comment" class="form-control" />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-md-3 col-12 text-primary">
                        <label asp-for="OrderHeader.Status"></label>
                    </div>
                    <div class="col-md-9 col-12">
                        <input disabled asp-for="OrderHeader.Status" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3 col-12 text-primary">
                        <label asp-for="OrderHeader.PaymentStatus"></label>
                    </div>
                    <div class="col-md-9 col-12">
                        <input disabled asp-for="OrderHeader.PaymentStatus" class="form-control" />
                    </div>
                </div>

            </div>


            <div class="col-lg-4 col-12">
                <h4 class="d-flex justify-content-between align-content-center mb-3">
                    <span class="text-muted">Order ID: </span>
                    <span class="badge badge-secondary badge-pill">@Model.OrderHeader.Id</span>
                </h4>
                <ul class="list-group mb-2">
                    @foreach (var item in Model.OrderDetailList)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <div>
                                <h6 class="my-0">@item.ProductName</h6>
                                <small class="text-muted">Quantity : @item.Count</small>
                            </div>
                            <span class="text-muted">@(item.Count * item.Price)</span>
                        </li>
                    }



                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <span class="text-info"> Total (GEL)</span>
                        <strong class="text-info">@Model.OrderHeader.TotalAmount</strong>
                    </li>

                </ul>


                
                    @*<div class="col-12">
                        <button type="submit" class="mb-1 btn btn-warning form-control">
                            <i class="fas fa-times"></i> Sifariş Leğv Et
                        </button>
                    </div>*@
              
                    <div class="row">
                        <div class="col-12 ">
                            <a asp-action="Index" class="btn btn-success form-control">Back to Orders</a>
                        </div>
                    </div>
            </div>

        </div>
    </div>
</form>
